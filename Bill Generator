#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    int pizzas,puffs,cooldrinks;
    int pizzas_price=100;
    int puffs_price=20;
    int cooldrinks_price=10;
    scanf("%d",&pizzas);
    scanf("%d",&puffs);
    scanf("%d",&cooldrinks);
    printf("Bill Details\n");
    printf("No of pizzas:%d\n",pizzas);
    printf("No of puffs:%d\n",puffs);
    printf("No of cooldrinks:%d\n",cooldrinks);
    int  total=(pizzas*pizzas_price)+(puffs*puffs_price)+(cooldrinks*cooldrinks_price);
    printf("Total price=%d\n",total);
    printf("ENJOY THE SHOW!!!");
    return 0;
}
